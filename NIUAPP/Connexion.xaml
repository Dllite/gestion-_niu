<Window x:Class="NIUAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentification" Height="350" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Connexion" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,0" />

        <!-- Label pour l'email -->
        <TextBlock Text="Email :" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top"/>
        <!-- Champ pour entrer l'email -->
        <TextBox Name="EmailTextBox" HorizontalAlignment="Left" Height="30" Margin="120,100,0,0" VerticalAlignment="Top" Width="200"/>

        <!-- Label pour le mot de passe -->
        <TextBlock Text="Mot de passe :" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top"/>
        <!-- Champ pour entrer le mot de passe -->
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Height="30" Margin="120,150,0,0" VerticalAlignment="Top" Width="200"/>

        <!-- Bouton de connexion -->
        <Button Content="Se connecter" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,210,0,0" Height="35" Click="LoginButton_Click"/>

        <!-- Message d'erreur -->
        <TextBlock Name="ErrorMessage" Text="Email ou mot de passe incorrect." Foreground="Red" HorizontalAlignment="Center" Margin="0,260,0,0" Visibility="Collapsed"/>
    </Grid>
</Window>
